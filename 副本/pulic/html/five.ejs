<script>
    function aPost(url, data, callback) {
        let xhr = new XMLHttpRequest();
        xhr.onreadystatechange = function () {
            if (xhr.readyState === 4 && xhr.status === 200) {
                callback && callback(xhr.responseText);
            }
        }
        xhr.open('POST', url);
        let newData = Object.keys(data).map(key => key + '=' + data[key]).join('&');
        // console.log(newData);
        xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
        xhr.send(newData);
    }

    aPost('/api/findPro', {}, (data) => {

        hhh(data);
    })

    function hhh(data) {
        var data = JSON.parse(data);
        var str = '';
        for (var i = 0; i < data.length; i++) {
            str +=
                `<ul class="ul">
                    <del class="iconfont icon-weixuanzhong-01 add"></del>
                    <li class="li">${data[i].name}</li>
                    <li>${data[i].detalied}</li>
                    <li>${data[i].util}</li>
                    <li>${data[i].ndate}</li>
                    <em  class="iconfont icon-shanchu-01 remove delde" data-index="${data[i].id}"></em>
                </ul>`
        }
        titleBottom.innerHTML = str;
    }
    selet();

    function selet() {
        var big = document.getElementById('titleBottom');

        big.onclick = function (e) {
            var tar = e.target;
            if (tar.nodeName === "EM") {
                // console.log(tar.dataset.index);
                var i = tar.dataset.index;
                aPost('/api/deletePro', {
                    id: i
                }, (data) => {
                    console.log(data)
                    hhh(data);
                })
            }
        }
    }
